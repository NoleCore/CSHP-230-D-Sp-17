@model Final.WebSite.Models.IndexModel

@{
    ViewBag.Title = "Enroll In Class";
}

<h2>Classes</h2>
<div class="row">
    <div class="col-md-4">
        <h3>Name</h3>
        @foreach (var classes in Model.Classes)
        {
            <p>
                @classes.ClassName
            </p>
        }
    </div>

    <div class="col-md-4">
        <h3>Description</h3>
        @foreach (var classes in Model.Classes)
        {
            <p>
                @classes.ClassDescription
            </p>
        }
    </div>

    <div class="col-md-4">
        <h3>Price</h3>
        @foreach (var classes in Model.Classes)
        {
            <p>
                @string.Format("{0:C}", classes.ClassPrice)
            </p>
        }
    </div>
</div>
