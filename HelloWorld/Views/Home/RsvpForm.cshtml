@model HelloWorld.Models.GuestResponse
<head>
    <meta name="viewport" content="width=device-width" />
    <title>RsvpForm</title>
    <link href="~/Content/bootstrap.css" rel="stylesheet" />
    <link href="~/Content/Styles.css" rel="stylesheet" />
    <style>
        .btn a {
            color: white;
            text-decoration: none;
        }

        body {
            background-color: #f1f1f1;
        }
    </style>
</head>

@{
    Layout = null;
}
<html>
<body>
    <h4 class="panel-heading text-center">Please RSVP</h4>

    @using (Html.BeginForm())
    {
    @Html.ValidationSummary()
    <p>Name: @Html.TextBoxFor(t => t.Name)</p>
    <p>Email: @Html.TextBoxFor(t => t.Email)</p>
    <p>Phone: @Html.TextBoxFor(t => t.Phone)</p>
    <p>
        Will Attend: @Html.DropDownListFor(t => t.WillAttend, new[]
      {
        new SelectListItem { Text="Yes, I'll be there", Value=bool.TrueString},
        new SelectListItem{Text="No, I can't come", Value=bool.FalseString},
      }, "Choose an option")
    </p>
    <input type="submit" value="Submit RSVP" />
    }
</body>
</html>