@model BirthdayCard.Models.GuestResponse
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Birthday Card</title>
    <link href="~/Content/bootstrap.css" rel="stylesheet" />
    <link href="~/Content/Styles.css" rel="stylesheet" />
    <style>
        .btn a {
            color: white;
            text-decoration: none;
        }

        body {
            background-color: #f1f1f1;
        }
    </style>
</head>

@{
    Layout = null;
}
<html>
<body>
    <h4 class="panel-heading text-left">Send A Birthday Card</h4>

    @using (Html.BeginForm())
    {
        @Html.ValidationSummary()
        <p>From: @Html.TextBoxFor(t => t.From)</p>
        <p>To: @Html.TextBoxFor(t => t.To)</p>
        <p>Message: @Html.TextBoxFor(t => t.Message)</p>
        
        <input type="submit" value="Send Card" />
    }
</body>
</html>
